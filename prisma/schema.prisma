generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  SUPPLIER
  DOCTOR
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  role         Role
  passwordHash String
  createdAt    DateTime @default(now())
}
